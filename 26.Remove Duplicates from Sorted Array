class Solution(object):
    def removeDuplicates(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        left = 0
        # right = 1

        # while right < len(nums): ---------> 5ms time and 13.4 memory
            # if nums[left]  == nums[right]:
            #     right+=1
            # else: 
            #     left+=1
            #     nums[left] = nums[right]
            #     right+=1 
        for right in range(1,len(nums)): #-----------------> 2ms time and 13.8 memory
            if nums[left]  != nums[right]:
                left+=1
                nums[left] = nums[right]
            else:
                right+=1 
                
        return left+1
